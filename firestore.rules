rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user-specific conversation data.
    // Users can only read and write to their own conversations.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rule for the shared class schedule.
    // Any authenticated user can read the schedule.
    // Only the user whose UID matches the admin UID can write to it.
    // IMPORTANT: You must replace the placeholder UID with your actual Admin User UID from Firebase Authentication.
    match /settings/schedule {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == "GANTI_DENGAN_UID_ADMIN_ANDA";
    }
  }
}